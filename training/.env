# =============================================================================
# Environment Configuration for Universal QA Generator Training Project
# =============================================================================

# =============================================================================
# TELEGRAM INTEGRATION (Optional)
# =============================================================================
# Get your bot token from @BotFather on Telegram
# Format: 123456789:ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefg_hijklmnop
TELEGRAM_BOT_TOKEN="YOUR_TELEGRAM_TOKEN"

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
# Directory to cache downloaded Llama models
LLAMA_MODEL_CACHE_DIR=./datamodels/llama_cache

# Hugging Face model names
LLAMA_QUESTION_MODEL=meta-llama/Llama-3.2-3B-Instruct
LLAMA_ANSWER_MODEL=meta-llama/Llama-3.2-3B-Instruct

# CUDA Configuration
# Set to 0 for first GPU, 1 for second GPU, or empty for CPU only
CUDA_VISIBLE_DEVICES=0

# Model loading settings
LOAD_IN_4BIT=true
MAX_NEW_TOKENS=512
TEMPERATURE=0.7

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
# FastAPI server settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# =============================================================================
# CONTENT PROCESSING SETTINGS
# =============================================================================
# Maximum content length to process (characters)
MAX_CONTENT_LENGTH=50000

# Text chunking parameters
CHUNK_SIZE=800
CHUNK_OVERLAP=100

# Question generation limits
MAX_QUESTIONS_PER_CHUNK=5
MIN_QUESTION_LENGTH=8

# =============================================================================
# QUALITY CONTROL
# =============================================================================
# Quality thresholds (0.0 to 1.0)
QUALITY_THRESHOLD=0.8
SIMILARITY_THRESHOLD=0.85
CONFIDENCE_THRESHOLD=0.8

# Dataset size limits
MIN_DATASET_SIZE=10
MAX_DATASET_SIZE=1000

# =============================================================================
# FILE HANDLING
# =============================================================================
# Maximum file size for uploads (MB)
MAX_FILE_SIZE_MB=50

# Supported file formats (comma-separated)
SUPPORTED_TEXT_FORMATS=.txt,.md,.json,.jsonl,.csv
SUPPORTED_DOC_FORMATS=.pdf,.docx,.doc

# =============================================================================
# WEB SCRAPING
# =============================================================================
# Timeout for web requests (seconds)
WEB_SCRAPING_TIMEOUT=30

# User agent for web scraping
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (optional)
LOG_FILE=./logs/training.log

# =============================================================================
# DATA DIRECTORIES
# =============================================================================
# Override default data paths if needed (optional)
# RAW_DATA_DIR=./datasamples/raw
# PROCESSED_DATA_DIR=./datasamples/processed
# FINAL_DATASETS_DIR=./datasamples/final_datasets

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug mode
DEBUG=false

# Enable development features
DEVELOPMENT_MODE=true

# =============================================================================
# SECURITY (Keep these secret!)
# =============================================================================
# API keys and secrets (add as needed)
# OPENAI_API_KEY=your_openai_key_here
# HUGGINGFACE_TOKEN=your_hf_token_here

